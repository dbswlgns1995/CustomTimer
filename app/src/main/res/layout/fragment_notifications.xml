<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC">

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="  정보"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/setting_question"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    사용 방법"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_language"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    Language / 언어"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/setting_sharedapp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    친구에게 앱 추천하기"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_review"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    리뷰 작성"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_design"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="  디자인"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"/>


    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/setting_theme"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    테마"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_sound"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="    타이머 사운드 설정"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"/>




</LinearLayout>
